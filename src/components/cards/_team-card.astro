---
const { data } = Astro.props;
---

<article class="team">
	<div class="team__ava">
		<img src={data.frontmatter.ava} alt={data.frontmatter.name} />
	</div>
	<div class="team__footer">
		<div class="team__body">
			<div class="team__title">{data.frontmatter.name}</div>
			<p>{data.frontmatter?.job}</p>
		</div>
		<a
			href={`/team/${data.frontmatter?.slug}`}
			title={data.frontmatter.name}
			role="button"
		>
			<svg class="icon" width="24" height="24">
				<use xlink:href="#arr-t-r"></use>
			</svg>
		</a>
	</div>
</article>
