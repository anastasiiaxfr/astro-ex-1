---
const { data } = Astro.props;
const job = 'SMO | SERM manager';
const img = '/assets/img/authors/author-1.avif';
---

<div class="authors">
	{
		data.map((author) => (
			<a
				class="author"
				href={author.slug ? `/team/${author.slug}` : '/authors'}
				title={author.name}
			>
				<span>Автор:</span>
				<img
					src={img}
					alt={author.name}
					class="author__ava"
					width="50"
					height="50"
				/>
				<div class="author__body">
					<div class="author__name">{author.name}</div>
					<div class="author__info">{job}</div>
				</div>
			</a>
		))
	}
</div>
