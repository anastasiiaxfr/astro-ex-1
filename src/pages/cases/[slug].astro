---
import Layout from '../../layouts/Layout.astro';
import PostMeta from '../../components/cards/_post-meta.astro';
import Gallery from '../../components/ui/Gallery.astro';
import Stat from '../../components/ui/Stat.astro';
import { formatPubDate } from '../../assets/js/utils';
import { allCases } from './constant.js';

export async function getStaticPaths() {
    return allCases.map((post) => ({
        params: { slug: post.frontmatter.slug },
        props: { post }
    }));
}

const { post } = Astro.props;
const { frontmatter } = post;
const {
    category,
    title,
    tags,
    pubdate,
    poster = '/assets/img/bg/case-single.jpg',
    stat,
    gallery
} = frontmatter;

const bgImg = poster;
const bgFill = 'contain';

const meta = [
    {
        title: formatPubDate(pubdate),
        icon: 'date'
    },
    {
        title: '5 min',
        icon: 'time'
    }
];
