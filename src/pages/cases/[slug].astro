        <div class="container">
            <button class="chip">{category.title}</button>
            <h1 class="mt-2">{title}</h1>
            <PostMeta data={meta} />
            <div class="tags-block">
                {tags.map((tag) => <button class="tag-default">{tag}</button>)}
            </div>
        </div>
    </section>
    <article class="section page-container">
        <section>
            <div class="container page-content page-post">
                <h2>О клиенте</h2>
