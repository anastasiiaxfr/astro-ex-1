---
import '../assets/styles/main.sass'

import SEO from '../components/SEO.astro'
import Header from '../components/TheHeader.astro'
import Footer from '../components/TheFooter.astro'
import SVG from '../components/_svg.astro'

const { bg } = Astro.props
const { color, img, fill } = bg || {}
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <SEO />
    </head>
    <body class="page__body" style={`background: ${color} url(${img}) no-repeat top center/${fill};`}>
        <div class="page__wrapper">
            <Header />
            <main>
                <slot />
            </main>
        </div>
        <Footer />
        <SVG />
        <script src="../assets/js/main.js"></script>
    </body>
</html>
