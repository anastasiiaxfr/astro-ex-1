---
import '../assets/styles/main.sass'

import SEO from '../components/SEO.astro'
import Header from '../components/TheHeader.astro'
import Footer from '../components/TheFooter.astro'
import SVG from '../components/_svg.astro'

const { bg } = Astro.props
const { bgImg, bgFill } = bg || {}
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <SEO />
    </head>
    <body
        class="page__body"
        data-bs-theme="dark"
        style={bgImg ? { backgroundImage: `url(${bgImg})`, backgroundSize: bgFill } : {}}
    >
        <div class="page__wrapper">
            <Header />
            <main>
                <slot />
            </main>
        </div>
        <Footer />
        <SVG />
        <script src="../assets/js/main.js"></script>
    </body>
</html>
